(in-package :stumpwm)

(setf *mouse-focus-policy* :sloppy)

(set-prefix-key (kbd "C-="))

(define-key *root-map* (kbd "c") "exec gnome-terminal")

(define-key *root-map* (kbd "C-c") "exec gnome-terminal")

(define-key *root-map* (kbd "b") "exec firefox")

